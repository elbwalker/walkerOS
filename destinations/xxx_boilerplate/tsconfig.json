{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "rootDirs": ["."],
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["@elbwalker/walker.js", "node_modules/@types"],
    "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.*"]
}
