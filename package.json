{
  "name": "@walkerOS/monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/config/*",
    "packages/node/*",
    "packages/web/*",
    "packages/utils/*",
    "packages/types/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "publish-packages": "npm run build lint test && changeset version && changeset publish",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@walkerOS/eslint": "*",
    "@walkerOS/jest": "*",
    "@walkerOS/tsconfig": "*",
    "@walkerOS/tsup": "*",
    "turbo": "^2.4.4",
    "typescript": "^5.8.2"
  },
  "packageManager": "npm@11.2.0",
  "browserslist": [
    "> 0.2%",
    "not dead",
    "not ie < 11",
    "not op_mini all"
  ],
  "overrides": {
    "ajv": {
      "uri-js": "^4.4.1"
    },
    "jsdom": {
      "whatwg-url": "^14.2.0"
    },
    "tsup": {
      "source-map": {
        "whatwg-url": "^14.2.0"
      }
    }
  }
}
