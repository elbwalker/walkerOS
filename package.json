{
  "name": "@walkeros/monorepo",
  "private": true,
  "workspaces": [
    "packages/config/*",
    "packages/core",
    "packages/collector",
    "packages/cli",
    "packages/server/core",
    "packages/server/destinations/*",
    "packages/server/sources/*",
    "packages/web/core",
    "packages/web/destinations/*",
    "packages/web/sources/*",
    "apps/quickstart",
    "apps/walkerjs",
    "apps/storybook-addon",
    "apps/demos/react",
    "apps/demos/storybook",
    "website"
  ],
  "scripts": {
    "build": "npm run build:packages && npm run build:apps && npm run build:website",
    "build:packages": "turbo run build --filter='./packages/*'",
    "build:apps": "turbo run build --filter='./apps/*'",
    "build:website": "turbo run build --filter=@walkeros/website",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "format": "prettier --write .",
    "lint": "turbo run lint --filter=!@walkeros/website",
    "publish-packages": "npm run build lint test && changeset version && changeset publish",
    "test": "turbo run test --filter=!@walkeros/website",
    "prepare": "husky || true"
  },
  "dependencies": {
    "husky": "^9.1.7"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@walkeros/eslint": "*",
    "@walkeros/jest": "*",
    "@walkeros/tsconfig": "*",
    "@walkeros/tsup": "*",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "npm@11.6.1",
  "engines": {
    "node": ">=22.0.0"
  },
  "browserslist": [
    "> 0.2%",
    "not dead",
    "not ie < 11",
    "not op_mini all"
  ]
}
