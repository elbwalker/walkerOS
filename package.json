{
  "name": "@walkerOS/monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/config/*",
    "packages/core/*",
    "packages/server/*",
    "packages/server/destinations/*",
    "packages/web/*",
    "packages/web/destinations/*",
    "packages/web/sources/*",
    "apps/demos/react"
  ],
  "scripts": {
    "build": "turbo run build --output-logs=errors-only",
    "clean": "turbo run clean",
    "dev": "turbo run dev --output-logs=errors-only",
    "format": "prettier --write .",
    "lint": "turbo run lint --output-logs=errors-only",
    "publish-packages": "npm run build lint test && changeset version && changeset publish",
    "test": "turbo run test --output-logs=errors-only",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@walkerOS/eslint": "*",
    "@walkerOS/jest": "*",
    "@walkerOS/tsconfig": "*",
    "@walkerOS/tsup": "*",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "turbo": "^2.4.4",
    "typescript": "^5.8.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "npm@11.2.0",
  "browserslist": [
    "> 0.2%",
    "not dead",
    "not ie < 11",
    "not op_mini all"
  ],
  "overrides": {
    "ajv": {
      "uri-js": "^4.4.1"
    },
    "jsdom": {
      "whatwg-url": "^14.2.0"
    },
    "tsup": {
      "source-map": {
        "whatwg-url": "^14.2.0"
      }
    }
  }
}
