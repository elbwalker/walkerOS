{
  "name": "@walkeros/bundler",
  "version": "0.1.0",
  "description": "Bundle NPM packages with custom code into optimized JavaScript files",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "walkeros-bundle": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist/**",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "jest --colors",
    "lint": "tsc && eslint \"**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist && rm -rf coverage && rm -rf .temp"
  },
  "dependencies": {
    "esbuild": "^0.19.0",
    "commander": "^11.0.0",
    "zod": "^3.22.0",
    "pacote": "^17.0.0",
    "fs-extra": "^11.0.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@walkeros/jest": "*",
    "@walkeros/tsconfig": "*",
    "@walkeros/tsup": "*",
    "@types/fs-extra": "^11.0.0",
    "@types/pacote": "^11.1.5",
    "tsx": "^4.0.0"
  },
  "repository": {
    "url": "git+https://github.com/elbwalker/walkerOS.git",
    "directory": "packages/bundler"
  },
  "author": "elbwalker <hello@elbwalker.com>",
  "homepage": "https://github.com/elbwalker/walkerOS#readme"
}
