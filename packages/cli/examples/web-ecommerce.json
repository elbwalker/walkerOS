{
  "flow": {
    "platform": "web",
    "sources": {
      "demo": {
        "code": "sourceDemo",
        "config": {
          "settings": {
            "events": [
              {
                "name": "page view",
                "data": { "title": "Home", "path": "/" },
                "delay": 0
              },
              {
                "name": "product view",
                "data": {
                  "id": "P123",
                  "name": "Test Product",
                  "price": 99.99
                },
                "delay": 100
              }
            ]
          }
        }
      }
    },
    "destinations": {
      "demo": {
        "package": "@walkeros/destination-demo",
        "code": "destinationDemo",
        "config": {
          "settings": {
            "name": "demo"
          }
        }
      }
    },
    "collector": {
      "run": true,
      "globals": {
        "language": "en"
      }
    }
  },
  "build": {
    "packages": {
      "@walkeros/collector": {
        "imports": ["startFlow"]
      },
      "@walkeros/source-demo": {
        "imports": ["sourceDemo"]
      },
      "@walkeros/destination-demo": {
        "imports": ["destinationDemo"]
      }
    },
    "code": "// walkerOS configuration",
    "minify": false,
    "globalName": "walkerOS",
    "output": "./dist/web-ecommerce.js",
    "template": "templates/base.hbs"
  }
}
