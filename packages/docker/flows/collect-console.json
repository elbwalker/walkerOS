{
  "platform": "server",
  "packages": {
    "@walkeros/collector": {}
  },
  "code": "",
  "sources": {
    "http": {
      "code": "sourceExpress",
      "config": {
        "settings": {
          "endpoint": "/collect",
          "port": "${PORT:8080}",
          "cors": true,
          "jsonLimit": "10mb"
        }
      }
    }
  },
  "destinations": {
    "console": {
      "code": "destinationConsole",
      "config": {
        "settings": {
          "pretty": true,
          "prefix": "[walkerOS]",
          "includeContext": false
        }
      }
    }
  },
  "collector": {
    "run": true,
    "globals": {
      "environment": "production",
      "version": "1.0.0"
    }
  },
  "docker": {
    "port": 8080,
    "host": "0.0.0.0",
    "collect": {
      "gracefulShutdown": 25000
    }
  }
}
