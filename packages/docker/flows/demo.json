{
  "flow": {
    "platform": "server",
    "sources": {
      "demo": {
        "code": "sourceDemo",
        "config": {
          "settings": {
            "interval": 2000
          }
        }
      }
    },
    "destinations": {
      "demo": {
        "code": "destinationDemo",
        "config": {
          "settings": {
            "name": "Demo Output",
            "values": ["name", "data", "timestamp"]
          }
        }
      }
    },
    "collector": {
      "run": true,
      "globals": {
        "environment": "demo",
        "version": "1.0.0"
      }
    }
  },
  "build": {
    "packages": {
      "@walkeros/collector": {
        "version": "latest",
        "imports": ["startFlow"]
      },
      "@walkeros/source-demo": {
        "version": "latest",
        "imports": ["sourceDemo"]
      },
      "@walkeros/destination-demo": {
        "version": "latest",
        "imports": ["destinationDemo"]
      }
    },
    "code": "// Demo mode\n",
    "template": "../templates/base.hbs",
    "output": "demo-bundle.mjs",
    "tempDir": "/tmp"
  },
  "docker": {
    "port": 8080,
    "host": "0.0.0.0"
  }
}
