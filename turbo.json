{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "website/.env"],
  "concurrency": "2",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"],
      "env": ["CI", "RSPACK_PROGRESS", "DOCUSAURUS_BASEURL"]
    },
    "build:website": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "update": {}
  }
}
