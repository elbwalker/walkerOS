{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "concurrency": "80%",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"],
      "outputLogs": "errors-only"
    },
    "build:website": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"],
      "outputLogs": "errors-only"
    },
    "clean": {
      "cache": false,
      "outputLogs": "errors-only"
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "outputLogs": "errors-only"
    },
    "lint": {
      "outputs": [],
      "outputLogs": "errors-only"
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "outputLogs": "errors-only"
    },
    "update": {
      "outputLogs": "errors-only"
    }
  }
}
